from flask import Flask, request, render_template
from EmotionDetection.emotion_detection import emotion_detector

app = Flask("Emotion Detector")

@app.route("/emotionDetector")
def emotion_analyzer():
    """
    Retrieve the provided text string from the user,
    analyze it using the emotion detector, and return
    the confidence scores across all emotions and the dominant emotion.
    """

    # Get text input from query parameter
    text_to_analyze = request.args.get('textToAnalyze')

    # Handle blank or empty input
    if not text_to_analyze or text_to_analyze.strip() == "":
        return "Error: No text provided. Please enter some text to analyze."

    # Analyze emotions
    emotion_result = emotion_detector(text_to_analyze)

    # Extract individual emotion scores safely
    anger = emotion_result.get('anger', 0)
    disgust = emotion_result.get('disgust', 0)
    fear = emotion_result.get('fear', 0)
    joy = emotion_result.get('joy', 0)
    sadness = emotion_result.get('sadness', 0)
    dominant_emotion = emotion_result.get('dominant_emotion', None)

    # Handle case where detection fails
    if dominant_emotion is None:
        return "Invalid text! The system could not detect any emotion."

    # Format response
    response_str = f"""
    For the given statement, the system response is:<br>
    Anger: {anger}, Disgust: {disgust}, Fear: {fear}, Joy: {joy}, Sadness: {sadness}<br>
    <strong>Dominant Emotion: {dominant_emotion}</strong>
    """
    return response_str

@app.route("/")
def render_index_page():
    """
    Render the index page to the user, where the text string
    to be analyzed is provided and results are displayed.
    """
    return render_template('index.html')

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
